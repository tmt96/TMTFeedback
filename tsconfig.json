{
  "compilerOptions": {
    "module": "commonjs",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "lib": ["es6", "dom"],
    "jsx": "react",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "rootDir": "src",
  "target": "es6",
  "downlevelIteration": true,
  "strict": true,
  "strictNullChecks": true,
  "strictFunctionTypes": true,
  "noImplicitThis": true,
  "alwaysStrict": true,
  "noImplicitReturns": true,
  "types": ["node", "electron"],
  "esModuleInterop": true,
  "typeAcquisition": {
    "enable": true
  }
}
